<krpano version="1.23" title="Virtual Tour">

	<include url="skin/vtourskin.xml" />

    <!-- Inclusione logica grafica popup/info -->
    <include url="insidebar.xml" />
    <include url="hotspots_data.xml" />

	<!-- customize skin settings: maps, gyro, webvr, thumbnails, tooltips, layout, design, ... -->
	<skin_settings maps="true"
	               maps_type="openstreetmaps"
	               maps_bing_api_key=""
	               maps_google_api_key=""
	               maps_zoombuttons="false"
	               maps_loadonfirstuse="true"
	               gyro="true"
	               gyro_keeplookingdirection="false"
	               webvr="false"
	               webvr_keeplookingdirection="true"
	               webvr_prev_next_hotspots="true"
	               autotour="true"
	               littleplanetintro="false"
	               followmousecontrol="false"
	               title="true"
	               thumbs="true"
	               thumbs_width="120" thumbs_height="80" thumbs_padding="10" thumbs_crop="0|40|240|160"
	               thumbs_opened="true"
	               thumbs_text="false"
	               thumbs_dragging="true"
	               thumbs_onhoverscrolling="false"
	               thumbs_scrollbuttons="false"
	               thumbs_scrollindicator="false"
	               thumbs_loop="false"
	               tooltips_buttons="false"
	               tooltips_thumbs="false"
	               tooltips_hotspots="false"
	               tooltips_mapspots="false"
	               deeplinking="false"
	               loadscene_flags="MERGE"
	               loadscene_blend="OPENBLEND(0.5, 0.0, 0.75, 0.05, linear)"
	               loadscene_blend_prev="SLIDEBLEND(0.5, 180, 0.75, linear)"
	               loadscene_blend_next="SLIDEBLEND(0.5,   0, 0.75, linear)"
	               loadingtext=""
	               layout_width="100%"
	               layout_maxwidth="814"
	               controlbar_width="-24"
	               controlbar_height="40"
	               controlbar_offset="20"
	               controlbar_offset_closed="-40"
	               controlbar_overlap.no-fractionalscaling="10"
	               controlbar_overlap.fractionalscaling="0"
	               design_skin_images="vtourskin.png"
	               design_bgcolor="0x2D3E50"
	               design_bgalpha="0.8"
	               design_bgborder="0"
	               design_bgroundedge="1"
	               design_bgshadow="0 4 10 0x000000 0.3"
	               design_thumbborder_bgborder="3 0xFFFFFF 1.0"
	               design_thumbborder_padding="2"
	               design_thumbborder_bgroundedge="0"
	               design_text_css="color:#FFFFFF; font-family:Arial;"
	               design_text_shadow="1"
	               />

	<!--
	    For an alternative skin design either change the <skin_settings> values 
	    from above or optionally include one of the predefined designs from below.
	-->
	<!-- <include url="skin/vtourskin_design_flat_light.xml"  /> -->
	<!--<include url="skin/vtourskin_design_glass.xml"       /> -->
	<!--<include url="skin/vtourskin_design_ultra_light.xml" /> -->
	<!-- <include url="skin/vtourskin_design_117.xml"         /> -->
	<include url="skin/vtourskin_design_117round.xml"    /> 
	<!-- <include url="skin/vtourskin_design_black.xml"       /> -->
	
<!--  krpano Maps  -->
<include url="%VIEWER%/plugins/krpanomaps.xml"/>

    <layer name="mapbox" style="box" align="lefttop" x="10" y="10" keep="true">
        <plugin name="krpanomaps" style="krpanomaps" 
                lat="45.22133333" lng="11.29434167" zoom="14" 
                tileprovider="arcgis_streetmap" 
                controls="zoom|zoomarea|location|maptype" 
                align="center" width="-10" height="-10" 
                bgborder="1 0xAAAAAA 1" 
                onmapready="add_scene_spots();">
            <radar visible="true" size="100" alpha="0.33" fillcolor="0xFFFFFF" fillalpha="1.0" linecolor="0x00FF00" linealpha="0.5" linewidth="0.5" dragable="true" headingoffset="0"/>
        </plugin>
        <layer style="expandbutton"/>
    </layer>

    <action name="add_scene_spots" scope="local">
        set(caller.spotstyle[DEFAULT], 
            url="%CURRENTXML%/skin/vtourskin_mapspot.png", 
            overurl="%CURRENTXML%/skin/vtourskin_mapspot.png", 
            activeurl="%CURRENTXML%/skin/vtourskin_mapspotactive.png", 
            edge="bottom", x=0, y=0, scale=0.5 
        ); 
        
        forall(scene, s, 
            caller.addspot(get(s.name), get(s.lat), get(s.lng), get(s.heading), calc(xml.scene == s.name), calc('loadscene('+s.name+',null,MERGE,BLEND(0.5));')); 
        ); 
        
        caller.zoomtospotsextent();
    </action>

	<events onnewscene="close_popup();scene_activate_spot();update_scene_titles();" oncontrolbardown="close_popup();"/>
		<!-- Azione per aggiornare i titoli delle scene in base alla lingua -->
		<action name="update_scene_titles" scope="local">
			set(scene[scene_panorama1].title, get(languages[get(language)].scene1_title));
			set(scene[scene_panorama2].title, get(languages[get(language)].scene2_title));
			set(scene[scene_panorama3].title, get(languages[get(language)].scene3_title));
			if(global.title, calc(layer[skin_title].html, global.title + ' - ' + scene[get(xml.scene)].title); , copy(layer[skin_title].html, scene[get(xml.scene)].title ); );
			delayedcall(0.1, set(layer[skin_title].visible,true) );
		</action>
    
    <action name="scene_activate_spot"> 
        plugin[krpanomaps].pantospot(get(xml.scene)); 
        plugin[krpanomaps].activatespot(get(xml.scene)); 
    </action>

	<style name="hotspot_info" type="image" url="hotspots/info.svg" scale.desktop="0.26" scale.tablet="0.4" scale.mobile="0.5" distorted="false" css="color:#bbbbbb;"/>

	<style name="box" type="container" bgcolor="0xFFFFFF" bgalpha="1" bgroundedge="5" bgshadow="0 4 8 0x000000 0.7" 
           width.desktop="22%" width.tablet="22%" width.mobile="240" 
           height.desktop="50%" height.tablet="50%" height.mobile="40%" 
           zorder="1"/>

    <style name="expandbutton" type="text" align="righttop" x="30" y="30" width="28" height="28" textalign="center" edge="center" bgcolor="0xFFFFFF" bgalpha="1" bgborder="1 0xFFFFFF 0.5" bgroundedge="1" bgshadow="0 1 3 0x000000 1.0" 
           text="[svg style='display:block;' width='100%' height='100%' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'][path fill='none' stroke='#333' stroke-width='1' d='M 2 2 H 6 2 H 2 V 6 M 14 2 H 18 V 6 M 14 18 H 18 V 14 M 6 18 H 2 V 14'/][/svg]" 
           css="font-size:14px; font-weight:bold;" 
           expanded="false" 
           onclick="expand();"/>

    <action name="expand" scope="local"> if(caller.expanded == false, caller.expanded = true; caller.backupalign = caller.parentobject.align; caller.backupedge = caller.parentobject.align; caller.backuppos = join('|',caller.parentobject.x, caller.parentobject.y, caller.parentobject.width, caller.parentobject.height); caller.parentobject.zorder += 100; callwith(caller.parentobject, changealign(center,center); tween(x|y|width|height, 0|0|-100|-100); ); , callwith(caller.parentobject, changealign(get(caller.backupalign),get(caller.backupedge)); tween(x|y|width|height, get(caller.backuppos), 0.5, default, caller.expanded = false; caller.parentobject.zorder -= 100; ); ); ); </action>


<!-- LAYER per il blur di sfondo -->

<!-- Pulsante lingua in alto a destra -->

<layer name="lang_switch" keep="true" type="container" align="righttop" x="20" x.mobile="20" y="10" y.mobile="50" width="90" height="32" zorder="501" bgcolor="0x000000" bgalpha="0.3" bgroundedge="5">
	<layer name="lang_it" type="text" align="left"  x="5"
		html="IT"
		css="link:language:'color:'+(language=='it'?'#FFFFFF':'#888888')+';font-family:Arial;font-size:14px;font-weight:bold;cursor:pointer;text-align:center;text-decoration:'+(language=='it'?'underline':'none')+';transition:color 0.3s, text-decoration 0.3s, opacity 0.3s;'"
		bg="false"
		onover="if(language!='it', tween(alpha,1,0.18,easeInOutQuad); set(css,replace(css,'text-decoration:none','text-decoration:underline')); )"
		onout="if(language!='it', tween(alpha,0.7,0.18,easeInOutQuad); set(css,replace(css,'text-decoration:underline','text-decoration:none')); )"
		onclick="tween(alpha,0,0.13,easeInOutQuad); delayedcall(0.13, set(language, 'it'); call(update_scene_titles); tween(alpha,1,0.18,easeInOutQuad); )"
	/>
	<layer name="lang_sep" type="text" align="center" html="|"  css="color:#FFFFFF; font-family:Arial; font-size:14px;" bg="false" enabled="false" />
	<layer name="lang_en" type="text" align="right" x="5"
		html="EN"
		css="link:language:'color:'+(language=='en'?'#FFFFFF':'#888888')+';font-family:Arial;font-size:14px;font-weight:bold;cursor:pointer;text-align:center;text-decoration:'+(language=='en'?'underline':'none')+';transition:color 0.3s, text-decoration 0.3s, opacity 0.3s;'"
		bg="false"
		onover="if(language!='en', tween(alpha,1,0.18,easeInOutQuad); set(css,replace(css,'text-decoration:none','text-decoration:underline')); )"
		onout="if(language!='en', tween(alpha,0.7,0.18,easeInOutQuad); set(css,replace(css,'text-decoration:underline','text-decoration:none')); )"
		onclick="tween(alpha,0,0.13,easeInOutQuad); delayedcall(0.13, set(language, 'en'); call(update_scene_titles); tween(alpha,1,0.18,easeInOutQuad); )"
	/>
</layer>

<!-- AZIONI -->


	
	<scene name="scene_panorama1" title="get(languages[get(language)].scene1_title)" onstart="" thumburl="panos/panorama1.tiles/thumb.jpg" lat="45.22133333" lng="11.29434167" alt="34.06" heading="0.0">
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/panorama1.tiles/preview.jpg" />

		<image>
			<cube url="panos/panorama1.tiles/%s/l%l/%v/l%l_%s_%v_%h.jpg" multires="512,1024,2048,3840" />
		</image>

		<!-- HOTSPOT nella scena -->
	<hotspot name="info1"
	style="hotspot_info"
	ath="-25.91"
	atv="24.43"
	onover="if(device.desktop, set(css, 'color:#0099FF;'); set(url, 'hotspots/info_hover.svg'); tween(scale,0.36); )"
	onout="if(device.desktop, set(css, 'color:#bbbbbb;'); set(url, 'hotspots/info.svg'); tween(scale,0.26); )"
	onclick="if(device.mobile OR device.tablet, tween(scale,0.9,0.15,easeInOutQuad); set(css, 'color:#0099FF; box-shadow:0 0 12px #0099FF;'); delayedcall(0.3, tween(scale,0.5,0.15,easeInOutQuad); set(css, 'color:#bbbbbb; box-shadow:none;'); ); ); open_popup(get(languages[get(language)].h1_t), get(languages[get(language)].h1_c), 'hotspots/hotspot1.jpg');"
	/>

	</scene>

	<scene name="scene_panorama2" title="get(languages[get(language)].scene2_title)" onstart="" thumburl="panos/panorama2.tiles/thumb.jpg" lat="45.22085556" lng="11.29424722" alt="48.90" heading="0.0">
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/panorama2.tiles/preview.jpg" />

		<image>
			<cube url="panos/panorama2.tiles/%s/l%l/%v/l%l_%s_%v_%h.jpg" multires="512,1024,2048,3840" />
		</image>

	</scene>

	<scene name="scene_panorama3" title="get(languages[get(language)].scene3_title)" onstart="" thumburl="panos/panorama3.tiles/thumb.jpg" lat="45.14435556" lng="12.30092500" alt="7.85" heading="0.0">
		
		<control bouncinglimits="calc:image.cube ? true : false" />

		<view hlookat="0.0" vlookat="0.0" fovtype="MFOV" fov="120" maxpixelzoom="2.0" fovmin="70" fovmax="140" limitview="auto" />

		<preview url="panos/panorama3.tiles/preview.jpg" />

		<image>
			<cube url="panos/panorama3.tiles/%s/l%l/%v/l%l_%s_%v_%h.jpg" multires="512,1024,2048,3840" />
		</image>

	</scene>



    <events name="debug_coords" keep="true" onclick="trace_coordinates();" />

    <action name="trace_coordinates">
    screentosphere(mouse.x, mouse.y, click_ath, click_atv);
    
    roundval(click_ath, 2);
    roundval(click_atv, 2);

    js( calc('console.log("Nuovo Hotspot: ath=' + click_ath + ' atv=' + click_atv + '")') );
</action>

</krpano>
