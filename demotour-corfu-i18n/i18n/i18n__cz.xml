<krpano >

    <!-- The cz (Czech) language dictionary file    -->
    <!-- UTF-8: https://www.w3schools.com/charsets/ref_utf_latin_extended_b.asp -->

    <!-- skin\vtourskin.xml 
        title, loadingtext  -->
    <krpano title="Dovolen&#225; na ostrov&#283; Korfu"/>
    <skin_settings if="skin_settings.loadingtext !== ''"  loadingtext="Na&#269;&#237;tava se..."  />

    <!-- Context menu dictionary -->
    <i18n.ctxmenu>
        <key name="lang_change" txt="Zm&#277;&#x148; &#269;e&#353;tinu"/>
        <key name="nextscene" txt="Dal&#353;&#237; panorama" 	/>
        <key name="skin_change" 	txt="Zm&#277;&#x148; celkov&#253; vzhled " />
        </i18n.ctxmenu>

    <!-- Context menu customization 
            KRPANO  - 
            FULLSCREEN is done explicitly as item name="fs", therefore fullscreen="false"
        -->
    <contextmenu fullscreen="false">
        <item name="kr" caption="O krpano prohl&#237;da&#269;i..."  onclick="openurl('http://krpano.com',_blank);"/>
        <item name="fs" caption="Na celou obrazovku"    onclick="switch(fullscreen);" devices="fullscreensupport"/>
        <item name="cc" caption="&#344;&#237;zen&#237; my&#353;ky"   />
        <item name="nv" caption="Norm&#225;lny pohled"         />
        <item name="fv" caption="Pohled ryb&#237; oko"     />
        <item name="sv" caption="Stereografick&#253; pohled"       />
        <item name="av" caption="Architektonick&#253; pohled"    />
        <item name="pv" caption="Pohled v Panniniho projekci"    />
        <item name="lp" caption="Mal&#225; planeta"                />
        </contextmenu>

	<!-- enhanced contextmenu for vtourskin selector	-->
    <contextmenu>
        <item name="skin_change"
			caption="Zm&#277;&#x148; celkov&#253; vzhled " />
        </contextmenu>


    <!-- add tooltips to skin layout -->
    <layer name="skin_layer" >
        <layer name="skin_control_bar">
            <layer name="skin_control_bar_buttons">
                <layer name="skin_btn_prev"         tooltip="P&#345;edchoz&#237; panorama" />
                <layer name="skin_btn_thumbs"       tooltip="Panoramy" />
                <layer name="skin_btn_i18n"         tooltip="V&#253;b&#277;r jazyka" />

                <layer name="skin_btn_map"          tooltip="Zobraz polohu na map&#283;" />
                <layer name="skin_btn_navi">
                    <layer name="skin_btn_left"     tooltip="Doleva" />
                    <layer name="skin_btn_right"    tooltip="Doprava" />
                    <layer name="skin_btn_up"       tooltip="Hore" />
                    <layer name="skin_btn_down"     tooltip="Dole" />
                    <layer name="skin_btn_in"       tooltip="Zv&#277;t&#353;i" />
                    <layer name="skin_btn_out"      tooltip="Zmen&#353;i" />
                </layer>
                <layer name="skin_btn_gyro"         tooltip="Gyroskope" />
                <layer name="skin_btn_vr"           tooltip="VR a Stereo podpora " />
                <layer name="skin_btn_fs"           tooltip="Pln&#225; obrazovka" />
                <layer name="skin_btn_hide"         tooltip="Skry tla&#269;&#237;dla" />
                <layer name="skin_btn_show"         tooltip="Zobraz tla&#269;&#237;dla" >
                    <layer name="skin_btn_show_icon"/>
                </layer> 
                <layer name="skin_btn_next"         tooltip="Dal&#353;&#237; panorama" />
                </layer>
            </layer>
    </layer>

    <!-- previous/next scene buttons for the hidden skin mode -->
    <layer name="skin_btn_prev_fs" >
        <layer name="skin_btn_prev_fs_icon" tooltip="P&#345;edchoz&#237; panorama" />
    </layer>
    <layer name="skin_btn_next_fs" >
        <layer name="skin_btn_next_fs_icon" tooltip="Dal&#353;&#237; panorama" />
    </layer>

    <!-- viewer/plugins/webvr.xml  (just an example)
    <layer name="webvr_enterbutton"        html="Enter VR"         />
    <layer name="webvr_exitbutton"         html="Exit VR"          />
    <layer name="webvr_setupbutton"        html="VR Setup"         />
     -->
    <layer name="webvr_enterbutton"        html="Vstup do VR"      />
    <layer name="webvr_exitbutton"         html="Ukon&#269;i VR"           />    
    <layer name="webvr_setupbutton"        html="VR Nastaven&#237;"        />    

    <plugin name="WebVR" devices="html5"
            onentervr="webvr_onentervr();i18n.change_vr_html();"
            />
    <layer name="webvr_setupbutton"
           onclick="vr_setup();i18n.change_vr_txt();"
           />

    <action name="i18n.change_vr_txt">
        trace(%0,'(', %1 %2, ')', ' layer[vr_setup_sav].html=', layer[vr_setup_sav].html, ' tick=',timertick);

        set(layer[vr_setup_title].html, "MOBIL VR Nastaven&#237;");
        set(layer[vr_setup_dvn1].html,  "Za&#345;izen&#237;"        );
        set(layer[vr_setup_siz1].html,  "Velikost obrazovky" );
        set(layer[vr_setup_ipd1].html,  "Medziocn&#237; vzdalenost (IPD)"   );
        set(layer[vr_setup_hmd1].html,  "VR Bryle"       );
        set(layer[vr_setup_hmd3].html,  "P&#345;estav"            );
        set(layer[vr_setup_cal].html,   "Kalibruj Gyroskop" );

        set(layer[vr_setup_sav].html,   "UCHOVAJ" );
        set(layer[vr_setup_rst].html,   "RESET"     );
        set(layer[vr_setup_cls].html,   "ZAVRI" );

        </action>

    <!-- my scenes dictionary -->

    <!-- my scenes dictionary -->
    <i18n.scene_achilleion-hof-unten>   
        <key name="title"       txt="Zahrada v Achilleion "/>
        </i18n.scene_achilleion-hof-unten>
    <i18n.scene_canaldemure5>   
        <key name="title"       txt="Kan&#225;l d&#180;Amour "/>
        </i18n.scene_canaldemure5>  
    <i18n.scene_kalamaki-strand>    
        <key name="title"       txt="Pl&#225;&#382; na Kalamaki "/>
        </i18n.scene_kalamaki-strand>
    <i18n.scene_kassiopi-felsen>    
        <key name="title"       txt="Sk&#225;ly na Kassiopi "/>
        </i18n.scene_kassiopi-felsen>
    <i18n.scene_korfu-stadt-alte-festung-ganz-oben> 
        <key name="title"       txt="Pevnost v star&#233;m m&#283;ste"/>
        </i18n.scene_korfu-stadt-alte-festung-ganz-oben>
    <i18n.scene_pantokrator-antenne>    
        <key name="title"       txt="Vys&#237;la&#269; na hore Pantokrator"/>
        </i18n.scene_pantokrator-antenne>
    <i18n.scene_pantokrator-kloster>    
        <key name="title"       txt="Pantokrator kl&#225;&#353;ter"/>
        </i18n.scene_pantokrator-kloster>

</krpano>