<krpano >
    
    <!-- de (German) language dictionary file    -->

    <!-- skin/vtourskin.xml 
        title, loadingtext  -->
    <krpano title="Urlaub an Korfu "/>
    <skin_settings if="skin_settings.loadingtext !== ''"  loadingtext="Ich lese ein..."  />

    <!-- Context menu dictionary -->
    <i18n.ctxmenu>
        <key name="lang_change" txt="&#196;ndere die Sprache"/>
        <key name="skin_change" txt="&#196;ndere Skin"/>
        </i18n.ctxmenu>

    <!-- Context menu customization 
            KRPANO  - ???
            FULLSCREEN is done explicitly, therefore fullscreen="false"
        -->
    <contextmenu fullscreen="false">
        <item name="kr" caption="&#220;ber krpano Viewer..."    onclick="openurl('http://krpano.com',_blank);"/>
        <item name="fs" caption="Ganzer Bildschirm "    onclick="switch(fullscreen);" devices="fullscreensupport"/>
        <item name="cc" caption="Wie die Maus arbeitet "    />
        <item name="nv" caption="Normale Ansicht"           />
        <item name="fv" caption="Fisch Auge"        />
        <item name="sv" caption="Stereografische Ansicht"       />
        <item name="av" caption="Architektonische Ansicht"    />
        <item name="pv" caption="Pannini Ansicht"    />
        <item name="lp" caption="Kleiner Planet"                />
    </contextmenu>

    <contextmenu>
        <item name="skin_change" caption="&#196;ndere den Skin " />
        </contextmenu>


    <!-- add tooltips to skin layout -->
    <layer name="skin_layer" >
        <layer name="skin_control_bar">
            <layer name="skin_control_bar_buttons">
                <layer name="skin_btn_prev"         tooltip="Voriges Panorama" />
                <layer name="skin_btn_thumbs"       tooltip="Panoramen" />
                <layer name="skin_btn_i18n"         tooltip="&#196;ndere die Sprache" />

                <layer name="skin_btn_map"          tooltip="Anzeige an der Karte" />
                <layer name="skin_btn_navi">
                    <layer name="skin_btn_left"     tooltip="Shau links" />
                    <layer name="skin_btn_right"    tooltip="Shau rechts" />
                    <layer name="skin_btn_up"       tooltip="Shau oben" />
                    <layer name="skin_btn_down"     tooltip="Shau unten" />
                    <layer name="skin_btn_in"       tooltip="Zoom-in" />
                    <layer name="skin_btn_out"      tooltip="Zoom-out" />
                </layer>
                <layer name="skin_btn_gyro"         tooltip="Gyroskope" />
                <layer name="skin_btn_vr"           tooltip="VR und Stereo Unterst&#252;tzung" />
                <layer name="skin_btn_fs"           tooltip="Ganzer Bildschirm" />
                <layer name="skin_btn_hide"         tooltip="Verstecke Ikonen" />
                <layer name="skin_btn_show"         tooltip="Schaue Ikonen" >
                    <layer name="skin_btn_show_icon"/>
                </layer> 
                <layer name="skin_btn_next"         tooltip="N&#228;chstes Panorama" />
                </layer>
            </layer>
    </layer>

    <!-- viewer/plugins/webvr.xml  (just an example)
    <layer name="webvr_enterbutton"        html="Enter VR"         />
    <layer name="webvr_exitbutton"         html="Exit VR"          />
    <layer name="webvr_setupbutton"        html="VR Setup"         />
     -->
    <layer name="webvr_enterbutton"        html="Eintritt VR"      />
    <layer name="webvr_exitbutton"         html="Bende VR"           />    
    <layer name="webvr_setupbutton"        html="VR Einstellen"        />    

    <plugin name="WebVR" devices="html5"
            onentervr="webvr_onentervr();i18n.change_vr_html();"
            />
    <layer name="webvr_setupbutton"
           onclick="vr_setup();i18n.change_vr_txt();"
           />

    <action name="i18n.change_vr_txt">
        trace(%0,'(', %1 %2, ')', ' layer[vr_setup_sav].html=', layer[vr_setup_sav].html, ' tick=',timertick);

        set(layer[vr_setup_title].html, "MOBILE VR Einstellen");
        set(layer[vr_setup_siz1].html,  "Bildschirmgr&#246;&#223;e" );
        set(layer[vr_setup_ipd1].html,  "Interpupillary distance (IPD)"   );
        set(layer[vr_setup_hmd1].html,  "Virtual Reality Brille"       );
        set(layer[vr_setup_hmd3].html,  "Einstellen"            );
        set(layer[vr_setup_cal].html,   "Kalibriere Gyroskope" );

        set(layer[vr_setup_sav].html,   "SPEICHERE" );
        set(layer[vr_setup_rst].html,   "RESET"     );
        set(layer[vr_setup_cls].html,   "SCHLIESSE" );

        </action>


    <!-- my scenes dictionary -->
	<i18n.scene_achilleion-hof-unten>	
		<key name="title" 		txt="Achilleion Hof unten "/>
		</i18n.scene_achilleion-hof-unten>
	<i18n.scene_canaldemure5>	
		<key name="title" 		txt="Kanal  d&#180;Amour "/>
		</i18n.scene_canaldemure5>	
	<i18n.scene_kalamaki-strand>	
		<key name="title" 		txt="Kalamaki Strand "/>
		</i18n.scene_kalamaki-strand>
	<i18n.scene_kassiopi-felsen>	
		<key name="title" 		txt="Kassiopi Felsen "/>
		</i18n.scene_kassiopi-felsen>
	<i18n.scene_korfu-stadt-alte-festung-ganz-oben>	
		<key name="title" 		txt="Korfu Stadt (alte Festung ganz oben)"/>
		</i18n.scene_korfu-stadt-alte-festung-ganz-oben>
	<i18n.scene_pantokrator-antenne>	
		<key name="title" 		txt="Pantokrator Antenne "/>
		</i18n.scene_pantokrator-antenne>
	<i18n.scene_pantokrator-kloster>	
		<key name="title" 		txt="Pantokrator Kloster"/>
		</i18n.scene_pantokrator-kloster>

</krpano>